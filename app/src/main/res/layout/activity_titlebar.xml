<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.DialogActivity"
    android:orientation="vertical">

    <com.jane.widget.titleBar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tb_text_size="12sp"
        app:tb_title_text="平移汇聚展示"
        app:tb_text_is_bold="false"
        app:tb_rightView_drawable="@drawable/ic_menu"
        app:tb_show_animate_type="translate_show" />


    <com.jane.widget.titleBar.TitleBar
        android:id="@+id/titleBar2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tb_text_size="12sp"
        app:tb_title_text="旋转透明度展示"
        app:tb_text_is_bold="false"
        app:tb_is_image_drawable_color_unified="true"
        app:tb_image_unified_color="@color/black"
        app:tb_rightView_drawable="@drawable/ic_menu"
        app:tb_show_animate_type="rotation_alpha_show" />

    <com.jane.widget.titleBar.TitleBar
        android:id="@+id/titleBar3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tb_text_size="12sp"
        app:tb_title_text="无样式"
        app:tb_text_is_bold="false"
        app:tb_is_image_drawable_color_unified="true"
        app:tb_image_unified_color="@color/black"
        app:tb_rightView_drawable="@drawable/ic_menu"
        app:tb_show_animate_type="none" />
  </LinearLayout>