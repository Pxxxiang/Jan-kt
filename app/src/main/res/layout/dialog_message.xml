<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="230dp"
    android:background="@drawable/bg_radius_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_messageDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_8"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintBottom_toTopOf="@+id/textView_messageDialog_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_messageDialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/margin_12"
        android:textSize="@dimen/message_text_size"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/textView_messageDialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="#ececec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_messageDialog_message" />

    <Button
        android:id="@+id/button_messageDialog_positive"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:text="确定"
        android:textStyle="bold"
        android:background="@null"
        android:textSize="@dimen/bold_button_text_size"
        android:textColor="@color/messageDialog_button_text_color"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_messageDialog_negative" />

    <Button
        android:id="@+id/button_messageDialog_negative"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:textColor="@color/messageDialog_button_text_color"
        android:textStyle="bold"
        android:textSize="@dimen/bold_button_text_size"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_messageDialog_positive" />

    <View
        android:id="@+id/view_messageDialog_center"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#ececec"
        app:layout_constraintStart_toEndOf="@id/button_messageDialog_positive"
        app:layout_constraintEnd_toStartOf="@id/button_messageDialog_negative"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>